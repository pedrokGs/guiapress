<%- include ("../partials/header.ejs") %>
    <%- include ("../partials/navbar.ejs") %>

        <div class="container">
            <br><br>
            <h2>Artigos</h2>
            <hr>

            <% articles.forEach(article=> { %>
                <div class="card" style="padding: 15px;">
                    <div class="card-header">
                        <h2><%= article.title %></h2>
                    </div>

                <div class="card-body">
                    <h5><strong>Categoria:</strong>
                        <%= categories.find(category=> category.id === article.categoryId)?.title || "Sem Categoria" %>
                    </h5>
                    <p>
                        <%= article.body %>
                    </p>


                </div>
        </div>
        <br>
        <% }) %>


            </div>

            <div style="margin: auto; text-align: center;">
                <a href="/admin/articles/new"><button class="btn btn-success">Cadastrar novo artigo</button></a>
            </div>

            <%- include ("../partials/footer.ejs") %>
<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    
    <br><br>
    <div class="card" style="padding: 15px;"> 
        <div class="card-header">
            <h2>Cadastro de artigos</h2>
        </div>
        <div class="card-body"></div>
            <form method="POST" action="/articles/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo"><br>
                <textarea class="form-control" name="body" placeholder="Defina o conteúdo do artigo"></textarea><br>
                <select name="categoryId" class="form-control">
                    <option value="">Selecione uma categoria</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select><br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
            <br><br>
            <a href="/admin/categories/"><button class="btn btn-primary">Voltar</button></a>
        </div>
    </div>
</div>
<%- include ("../../partials/footer.ejs") %>
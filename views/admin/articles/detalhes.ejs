<div class="container">
    <br><br>
    <div class="card" style="padding: 15px;"> 
        <div class="card-header">
            <h2>Detalhes do artigo</h2>
        </div>
        <div class="card-body"></div>
                <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>" disabled><br>
                <textarea class="form-control" name="body" placeholder="Defina o conteúdo do artigo" disabled><%= article.body %></textarea><br>
                <select name="categoryId" class="form-control" disabled>
                    <option value="">
                        <%= categories.find(category => category.id === article.categoryId)?.title || "Sem Categoria" %></option>
                </select><br>
                <a href="/admin/articles/"><button class="btn btn-primary">Voltar</button></a>
        </div>
    </div>
</div>
